<h1>Search Result</h1>
<% @products.each do |product| %>
<div class = 'center'>
<div class="card center" style="width: 18rem;">
  <div class="card-body">
   <%= image_tag(product.image, :alt => "rss feed",class: 'img') %>
    <h5 class="card-title"><%=product.name %> </h5>
    <p class ='card-title'> <%=product.author %> </p>
     <p class="card-text"><%=product.description %> </p>
      <p class ='card-title'> Quantity :<%=product.quantity%> </p>
    <p class="card-text">Price :<%=product.price%></p>
      <%if product.quantity >0 -%>
       <a href="#" class="btn btn-primary">Available for buy</a>
    <% end -%>  
       <%if product.quantity <= 0 -%>
        <div class ='red'>    Sold out! </div>
    <% end -%>  
    
  </div>
</div>
</div>
<% end %>
