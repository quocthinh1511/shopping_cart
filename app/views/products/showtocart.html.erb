<% provide(:title,@product.name) %>
<div class='orderitemback'>
<div class="card center widthcard" style="width: 18rem;">
  <%= image_tag(@product.image.url, :alt => "rss feed",class: 'img') %>
  <div class="card-body">
    <h5 class="card-title">Name :<%=@product.name %> </h5>
    <h5 class ='card-title'> Author :<%=@product.author %> </h5>
    <p class="card-text">Description :<%=@product.description %> </p>
    <h5 class ='card-title'> Quantity Remain :<%=@product.quantity%> </h5>
    <h5 class ='card-title'> Price :<%=@product.price%> </h5>
  </div>
  <%= form_for @order_item, method: :post do |f| %>
  <%= f.label :quantity %>
  <%= f.number_field :quantity, class: 'form-control' %>
  <%= f.hidden_field :product_id, :value => @product.id%>
  <%= f.submit "Add to cart",class: "btn btn-primary" %>
  <% end %>
</div>
</div>

