<% provide(:title, 'Product') %>
<h1 class='margintop'>Buy confirm</h1>
<div class="row">
<div class="col-md-6 col-md-offset-3">
<%= form_with(model: @order_item, local: true) do |f| %>
<%= render 'shared/error_messages' %>
<%= f.label :quantity %>
